@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #fff0f5; /* plain very light pink */
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin: 0;
    }

    .home-container {
        text-align: center;
        padding: 60px 50px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 35px;
        border: 4px solid #ff99cc;
        box-shadow: 0 12px 25px rgba(0,0,0,0.2);
        max-width: 700px;
        margin: 50px auto 20px auto;
    }

        .home-container h1 {
            font-family: 'Pacifico', cursive;
            font-size: 4rem;
            color: #d63384;
            margin-bottom: 15px;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.1);
        }

        .home-container p.quote {
            font-style: italic;
            font-size: 1.4rem;
            color: #b30059;
            margin-bottom: 40px;
        }

    .btn-custom {
        padding: 15px 40px;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 50px;
        margin: 10px;
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-custom:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

    .login-btn {
        background: #ff3385;
        color: white;
    }

    .register-btn {
        background: #ff66b3;
        color: white;
    }

    footer {
        text-align: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.85);
        color: #d63384;
        font-weight: 500;
        font-size: 1rem;
        border-top: 2px solid #ff99cc;
        box-shadow: 0 -4px 10px rgba(0,0,0,0.1);
    }
</style>

<div class="home-container">
    <h1>🌸 Flower Shop 🌸</h1>
    <p class="quote">"Where every bloom tells a story and every petal whispers love."</p>

    <div>
        <a class="btn btn-custom login-btn" href="/Account/Login">Login</a>
        <a class="btn btn-custom register-btn" href="/Account/Register">Register</a>
    </div>
</div>

<footer>
    &copy; 2025 Flower Shop. All rights reserved 🌸
</footer>
