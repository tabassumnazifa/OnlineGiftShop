@model IEnumerable<FlowerShopAuth.Models.Gift>

@{
    ViewData["Title"] = "Available Gifts";
}

<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #fff0f5;
        padding: 20px;
    }

    h2 {
        font-family: 'Pacifico', cursive;
        color: #d63384;
        text-align: center;
        margin-bottom: 30px;
    }

    .gift-card {
        background: #fff;
        border-radius: 25px;
        border: 2px solid #ff99cc;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        padding: 15px;
        text-align: center;
        transition: transform 0.3s ease;
    }

        .gift-card:hover {
            transform: scale(1.05);
        }

    .gift-img {
        width: 120px;
        height: 120px;
        border-radius: 15px;
        margin-bottom: 10px;
        object-fit: cover;
    }

    .gift-name {
        font-weight: 600;
        font-size: 1.2rem;
        color: #b30059;
    }

    .gift-price {
        font-weight: 500;
        color: #ff3385;
        margin-bottom: 10px;
    }

    .gift-desc {
        font-size: 0.95rem;
        color: #a83279;
    }

    .gifts-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
        max-width: 1000px;
        margin: auto;
    }
</style>

<h2>🌸 Available Gifts 🌸</h2>

<div class="gifts-container">
    @foreach (var gift in Model)
    {
        <div class="gift-card">
            @if (!string.IsNullOrEmpty(gift.Image))
            {
                <img src="@gift.Image" alt="@gift.Name" class="gift-img" />
            }
            <div class="gift-name">@gift.Name</div>
            <div class="gift-price">@gift.Price.ToString("C")</div>
            <div class="gift-desc">@gift.Description</div>
        </div>
    }
</div>
