@model FlowerShopAuth.Models.Gift

@{
    ViewData["Title"] = "Delete Gift";
}

<h2>Delete Gift</h2>

<div class="card p-3 mb-3">
    <h5>Are you sure you want to delete this gift?</h5>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <img src="@Model.Image" alt="@Model.Name" class="img-fluid mb-2" style="max-height:200px;" />

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger mt-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>
